        android:layout_x="14dp"
        android:layout_y="405dp"
        android:fontFamily="@font/font_8_bit"
        android:text="Exercise"
        android:textColor="#FFFFFF"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="51dp"
        android:layout_y="275dp"
        android:fontFamily="@font/font_8_bit"
        android:text="Weight"
        android:textColor="#FFFFFF"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="339dp"
        android:fontFamily="@font/font_8_bit"
        android:text="Age"
        android:textColor="#FFFFFF"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="59dp"
        android:layout_y="212dp"
        android:fontFamily="@font/font_8_bit"
        android:text="Height"
        android:textColor="#FFFFFF"
        android:textSize="32sp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="130dp"
        android:layout_height="56dp"
        android:layout_x="35dp"
        android:layout_y="712dp"
        app:srcCompat="@drawable/white_small_button" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="130dp"
        android:layout_height="56dp"
        android:layout_x="251dp"
        android:layout_y="712dp"
        app:srcCompat="@drawable/white_small_button" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="130dp"
        android:layout_height="56dp"
