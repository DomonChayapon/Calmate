        app:srcCompat="@drawable/yellow_small_button" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="209dp"
        android:layout_height="45dp"
        android:layout_x="187dp"
        android:layout_y="211dp"
        app:srcCompat="@drawable/small_value" />

    <EditText
        android:id="@+id/height"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_x="199dp"
        android:layout_y="210dp"
        android:ems="10"
        android:fontFamily="@font/font_8_bit"
        android:inputType="number"
        android:textAlignment="center"
        android:textColorLink="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="209dp"
        android:layout_height="45dp"
        android:layout_x="189dp"
        android:layout_y="339dp"
        app:srcCompat="@drawable/small_value" />

    <EditText
        android:id="@+id/age"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_x="202dp"
        android:layout_y="340dp"
        android:ems="10"
        android:fontFamily="@font/font_8_bit"
        android:inputType="number"
        android:textAlignment="center"
        android:textColorLink="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="209dp"
        android:layout_height="45dp"
        android:layout_x="188dp"
        android:layout_y="274dp"
        app:srcCompat="@drawable/small_value" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_x="200dp"
        android:layout_y="274dp"
        android:ems="10"
        android:fontFamily="@font/font_8_bit"
        android:inputType="number"
        android:textAlignment="center"
        android:textColorLink="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="399dp"
        android:layout_height="126dp"
        android:layout_x="5dp"
        android:layout_y="83dp"
        app:srcCompat="@drawable/name" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_x="0dp"
        android:layout_y="36dp"
        android:fontFamily="@font/font_8_bit"
        android:gravity="center_horizontal"
        android:text="WHAT IS YOUR NAME?"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="206dp"
        android:layout_height="196dp"
        android:layout_x="96dp"
        android:layout_y="492dp"
        app:srcCompat="@drawable/player" />


    <Button
        android:id="@+id/submitinformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="156dp"
        android:layout_y="785dp"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/font_8_bit"
        android:text="Submit"
        android:textColor="#241717" />

    <Spinner
        android:id="@+id/exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="227dp"
        android:layout_y="411dp"
        android:dropDownWidth="wrap_content"
        android:gravity="center"
        android:spinnerMode="dropdown" />

    <RadioGroup
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_x="46dp"
        android:layout_y="715dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radiomale"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/font_8_bit"
            android:text="Male" />

        <RadioButton
            android:id="@+id/radiofemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/font_8_bit"
            android:text="Female" />

    </RadioGroup>

    <TextView
        android:id="@+id/excessCaloriesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="348dp"
        android:layout_y="222dp"
        android:fontFamily="@font/font_8_bit"
        android:text="cm."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="353dp"
        android:layout_y="285dp"
        android:fontFamily="@font/font_8_bit"
        android:text="kg."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="325dp"
        android:layout_y="349dp"
        android:fontFamily="@font/font_8_bit"
        android:text="years"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_x="106dp"
        android:layout_y="114dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:fontFamily="@font/bpdots_8_bits"
        android:gravity="start"
        android:inputType="text"
        android:letterSpacing="0.3"
        android:maxLength="8"
        android:padding="10dp"
        android:textColorHint="#000000"
        android:textColorLink="#E4E4E4"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_x="113dp"
        android:layout_y="138dp"
        app:srcCompat="@drawable/line_dot" />

</AbsoluteLayout>